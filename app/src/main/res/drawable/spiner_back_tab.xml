<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="#aaa" />

            <solid android:color="@color/backcolor" />

            <corners android:radius="4dp" />
