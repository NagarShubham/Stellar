<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/li_dayweek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textcolor"
        android:orientation="vertical"

        android:padding="6dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/tabcolor"
            android:fontFamily="@font/text_me_one"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Select Day"
            android:textColor="@color/whitecolor"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sp_weekday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spinerback_edittext"
            android:entries="@array/weekday"
            android:paddingStart="6dp" />

        <Button
            android:id="@+id/btn_day_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@color/tabcolor"
            android:fontFamily="@font/text_me_one"
            android:text="Ok"
            android:textColor="@color/whitecolor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_leav"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgg"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/tabcolor"
            android:fontFamily="@font/text_me_one"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Leave"
            android:textColor="@color/whitecolor"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/leav_sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spinerback_edittext"
            android:entries="@array/leadType"
            android:paddingStart="6dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leav_todate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_backgroung"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:hint="To Date"
                android:paddingStart="10dp"
                />

            <TextView
                android:id="@+id/leav_fromdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_backgroung"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:hint="From Date"
                android:paddingLeft="10dp"
                />


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_backgroung"
            android:fontFamily="@font/text_me_one"
            android:gravity="start"
            android:id="@+id/leav_resion"
            android:hint="Reason of Leave"
            android:padding="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="@color/tabcolor"
                android:fontFamily="@font/text_me_one"
                android:text="Cancel"
                android:id="@+id/lev_cancle"
                android:textColor="@color/whitecolor"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:background="@color/tabcolor"
                android:fontFamily="@font/text_me_one"
                android:text="Ok"
                android:id="@+id/leav_send"
                android:textColor="@color/whitecolor"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>