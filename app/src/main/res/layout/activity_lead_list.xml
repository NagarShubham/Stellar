<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Lead_List.LeadListActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<TextView
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="1dp" />
        <Spinner
            android:id="@+id/c_name"
            android:background="@drawable/spiner_back_tab"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/rcy_leadtask"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/ti_team"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_group_black_24dp"
        android:textColor="@color/whitecolor"
        android:text="Team"
        android:fontFamily="@font/text_me_one"
        android:textSize="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/tabcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lead_team"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbforevent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</RelativeLayout>