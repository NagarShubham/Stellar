<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teamTask.PandingFragment">
    <LinearLayout
        android:id="@+id/ltab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/action_bar"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tab_lmon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Mon"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_ltue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Tue"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_lwed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Wed"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_lthu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Thu"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_lfri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Fri"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_lsat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Sat"
            android:textColor="@color/whitecolor" />

        <TextView
            android:id="@+id/tab_lsun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabcolor"
            android:gravity="center"
            android:text="Sun"
            android:textColor="@color/whitecolor" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcypanding"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/probar"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="No Data Found "
            android:textSize="24sp"
            android:id="@+id/tvNodata"
            android:visibility="gone"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>