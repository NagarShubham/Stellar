<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".teamTask.TeamPandingTaskActivity">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/bacButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bacButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/bacButton"
            android:text="Team Panding Task"
            android:textColor="@color/whitecolor"
            android:textSize="18sp" />


    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabbar"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabBackground="@color/tabcolor"
        android:background="@color/tabcolor"
        app:tabIndicatorColor="@color/whitecolor"
        app:tabMode="scrollable"
        app:tabMaxWidth="0dp"
        app:tabTextColor="@color/whitecolor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp" />
</LinearLayout>