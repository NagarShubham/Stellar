<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/tvback"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_customername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/whitecolor" />

            <TextView
                android:id="@+id/item_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/whitecolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/item_contacttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/whitecolor" />

            <TextView
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/whitecolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons_edit_property" />

            <TextView
                android:id="@+id/item_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/whitecolor" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/tabcolor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_done_black_24dp" />

        <ImageView
            android:id="@+id/item_no"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_close_black_24dp" />

    </LinearLayout>

</LinearLayout>