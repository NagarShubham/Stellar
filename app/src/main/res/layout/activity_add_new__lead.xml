<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AddNew_LeadActivity">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/action_bar"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Full Name"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Email"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="Full Name"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/et_mail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Mobile"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="office Number"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_mobile"

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="1234"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/et_phone"

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="0731"
                    android:inputType="number"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Company Name"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Designation"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_comp_name"

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="name"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/et_designation"

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="designation"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Contact From Time"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="To Time"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_from_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint=""
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <TextView
                    android:id="@+id/et_to_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint=""
                    android:inputType="number"
                    android:padding="10dp"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>













            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Department"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Source"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_department"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="Department"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <Spinner
                    android:id="@+id/et_source"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinerback_edittext"
                    android:hint="Source"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Category"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Address Detail"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/et_Category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinerback_edittext"
                    android:hint="Category"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="Address"
                    android:padding="10dp"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Description"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Type of Req."
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="description"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <Spinner
                    android:id="@+id/et_typeofReq"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinerback_edittext"
                    android:hint="Type of Req."
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Lead Value"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/text_me_one"
                    android:text="Closing Date"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_leadvalue"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="value"
                    android:inputType="number"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/et_closingDate"
                    android:layout_width="match_parent"
                    android:focusable="false"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_backgroung"
                    android:hint="DD-MM-YY"
                    android:padding="10dp"
                    android:textColor="@color/textcolor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/text_me_one"
                    android:text="Contact Type"
                    android:textColor="@color/whitecolor"
                    android:textSize="20sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:text="Lead Type"
                    android:fontFamily="@font/text_me_one"
                    android:textSize="20sp"
                    android:textColor="@color/whitecolor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"

                android:orientation="horizontal">



                <Spinner
                    android:layout_marginRight="8dp"
                    android:id="@+id/sp_contactType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spinerback_edittext"
                    android:entries="@array/contacttype"
                    android:hint="contact"
                    android:padding="10dp"
                    android:textColor="@color/textcolor" />
                <Spinner
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:id="@+id/sp_leadtype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinerback_edittext"
                    android:entries="@array/leadtype" />
            </LinearLayout>





            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:background="@color/backcolor"
                android:fontFamily="@font/text_me_one"
                android:text="Save"
                android:textColor="@color/whitecolor" />
        </LinearLayout>




</ScrollView>