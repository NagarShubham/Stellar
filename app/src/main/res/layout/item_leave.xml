<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_llayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/tabcolor"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@color/tvback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_ltodate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="hello"
                android:textColor="@color/whitecolor" />

            <TextView
                android:id="@+id/item_lformdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="hello"
                android:textColor="@color/whitecolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/item_ldayType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_wb_sunny_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="hello"
                android:textColor="@color/whitecolor" />

            <TextView
                android:id="@+id/item_lstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icons_businessman"
                android:drawablePadding="15dp"
                android:drawableTint="@color/whitecolor"
                android:fontFamily="@font/text_me_one"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="hello"
                android:textColor="@color/whitecolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons_edit_property" />

            <TextView
                android:id="@+id/item_lresponce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="@font/text_me_one"
                android:paddingLeft="15dp"
                android:paddingTop="4dp"
                android:text="Heesdsfsdf"
                android:textColor="@color/whitecolor" />

            <TextView
                android:id="@+id/mresponce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:drawablePadding="10dp"
                android:textColor="@color/red"
                android:padding="6dp"
                android:text="hello"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>